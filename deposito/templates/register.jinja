{% extends "base.jinja" %}
{% block body %}
<form class="form-horizontal" action="" method="post">
  <fieldset>

    <div id="legend" class="">
      <legend class="">Register</legend>
    </div>

    <div class="control-group">
      {{ form.username.label(class="control-label") }}
      <div class="controls">
        {{ form.username(class="input-xlarge") }}
      </div>
    </div>

    {% if form.username.errors %}
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {% for error in form.username.errors %}{{ error }}{% endfor %}
    </div>
    {% endif %}

    <div class="control-group">
      {{ form.password.label(class="control-label") }}
      <div class="controls">
        {{ form.password(class="input-xlarge") }}
      </div>
    </div>

    {% if form.password.errors %}
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {% for error in form.password.errors %}{{ error }}{% endfor %}
    </div>
    {% endif %}

    <div class="control-group">
      {{ form.pw_confirm.label(class="control-label") }}
      <div class="controls">
        {{ form.pw_confirm(class="input-xlarge") }}
      </div>
    </div>

    {% if form.pw_confirm.errors %}
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {% for error in form.pw_confirm.errors %}{{ error }}{% endfor %}
    </div>
    {% endif %}

    <div class="control-group">
      {{ form.email.label(class="control-label") }}
      <div class="controls">
        {{ form.email(class="input-xlarge") }}
      </div>
    </div>

    {% if form.email.errors %}
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {% for error in form.email.errors %}{{ error }}{% endfor %}
    </div>
    {% endif %}

    <div class="control-group">
      {{ form.about.label(class="control-label") }}
      <div class="controls">
        {{ form.about(class="input-xlarge") }}
      </div>
    </div>

    {% if form.about.errors %}
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      {% for error in form.about.errors %}{{ error }}{% endfor %}
    </div>
    {% endif %}

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </div>

    <input type=hidden name=next value="{{ next }}">

  </fieldset>
</form>
{% endblock %}
